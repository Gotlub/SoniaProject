{% extends "base.html.twig" %}
{% block body %}
    <div class="container mt-4">
    {% if adresse.id == null %}
        <h1>Creation Adresse</h1>
    {% else %}
        <h1>Modification de l'adresse : <strong>{{ adresse.adresseVisite ~ ' ' ~ adresse.commune ~ ' ' ~ adresse.cp  }}</strong></h1>
    {% endif %}
    <hr class="my-4">
            <div class="row">
            {{ form_start(formAdresse) }}
            {{ form_end(formAdresse) }}
            </div>
                {% if adresse.id != null %}
                    <hr class="my-4">
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="{{ path('adresse.edit', { 'id': adresse.id }) }}" class="btn btn-warning me-md-2">
                            Annuler
                        </a>
                        <a href="{{ path('adresse.suppr', { 'id': adresse.id }) }}" 
                            class="btn btn-danger" 
                            onclick="return confirm('Etes-vous sÃ»r de vouloir supprimer l'adresse : {{ adresse.adresseVisite ~ ' ' ~  adresse.commune}} ?')">
                            Supprimer
                        </a>
                    </div>
                {% endif %}
            </div>
    </div>
{% endblock %}