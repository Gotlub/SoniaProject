{% extends 'base.html.twig' %}

{% block title %}SymRecipe - Modification du mot de passe de l'utilisateur
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mt-4">Formulaire de modification de mot de passe</h1>
        <br>
		<h2>Utilisateur : <strong> {{ app.user.username }} </strong> </h2>
		<br>
		{% for message in app.flashes('warning') %}
			<div class="alert alert-warning mt-4">
				{{ message }}
			</div>
		{% endfor %}
        {{ form_start(form) }}
        {{ form_end(form) }}
	</div>
{% endblock %}
